<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_insert_new_number"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/amita"
        android:text="@string/insert_new_useful_number"
        android:textSize="18sp"
        android:textColor="#000" />

    <ImageButton
        android:id="@+id/image_insert_new_number"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView_insert_new_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_general_image"/>

    <EditText
        android:id="@+id/editText_insert_name_number"
        android:layout_below="@+id/image_insert_new_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:inputType="text"
        android:hint="@string/insert_name"
        android:textColorHint="#777272"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/editText_insert_number"
        android:layout_below="@+id/editText_insert_name_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:inputType="text"
        android:hint="@string/insert_number"
        android:textColorHint="#777272"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#000"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/editText_insert_comment"
        android:layout_below="@+id/editText_insert_number"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/border"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:hint="@string/insert_your_comment"
        android:textColorHint="#777272"
        android:gravity="start"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <Button
        android:id="@+id/saveButton_insertNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_insert_comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/save"/>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>