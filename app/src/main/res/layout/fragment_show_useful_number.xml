<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_show_useful_number"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/architects_daughter"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/image_show_useful_number"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/textView_show_useful_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_general_image"/>

        <TextView
            android:id="@+id/editText_insert_name_show_number"
            android:layout_below="@+id/image_show_useful_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/border"
            android:textColorHint="#777272"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#000"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/editText_insert_show_number"
            android:layout_below="@+id/editText_insert_name_show_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/border"
            android:textColorHint="#777272"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#000"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/editText_insert_show_comment"
            android:layout_below="@+id/editText_insert_show_number"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/border"
            android:scrollbars="vertical"
            android:gravity="start"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="15sp"
            android:textColor="#000" />

        <Button
            android:id="@+id/delete_button_show_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/editText_insert_show_comment"
            android:gravity="center"
            android:background="@drawable/round_bg"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/delete" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>